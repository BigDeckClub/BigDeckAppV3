# Database Configuration
# Supabase Transaction Pooler (RECOMMENDED - uses IPv4, works in serverless/Codespaces):
# 1. Enable pooling in Supabase: Dashboard > Project Settings > Database > Connection pooling
# 2. Copy the "Transaction pooler" connection string
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.your-project-ref:your-password@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Alternative: Supabase Direct Connection (requires IPv6 support):
# DATABASE_URL=postgresql://postgres:password@db.your-project-ref.supabase.co:5432/postgres

# Legacy NeonDB format (deprecated):
# DATABASE_URL=postgresql://neondb_owner:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require

# Supabase Authentication
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# CORS Configuration
# Comma-separated list of allowed origins
# Use '*' to allow all origins (not recommended for production)
# Example: https://bigdeck.app,https://www.bigdeck.app
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# AI API Keys
# Comma-separated list of valid API keys for AI agent access
AI_API_KEYS=key1,key2,key3

# Server Configuration
PORT=5000
NODE_ENV=development

# eBay Integration
# Get credentials from: https://developer.ebay.com/my/keys
EBAY_ENVIRONMENT=sandbox
EBAY_CLIENT_ID=your-client-id
EBAY_DEV_ID=your-dev-id
EBAY_CLIENT_SECRET=your-client-secret

# IMPORTANT: EBAY_RUNAME is the RuName (Redirect URI Name) from eBay Developer Portal
# This is NOT the actual callback URL - it's an identifier that maps to your registered URL
# To get your RuName:
# 1. Go to https://developer.ebay.com/my/keys (sandbox.ebay.com for sandbox)
# 2. Click "User Tokens" under OAuth for your application
# 3. Accept the OAuth settings / configure redirect URL if prompted
# 4. Copy the "RuName" shown (looks like: YourName-AppName-SBX-xxxxxxxx)
EBAY_RUNAME=YourName-AppName-SBX-xxxxxxxx

# Legacy: The actual callback URL (registered in eBay Developer Portal under your RuName)
EBAY_REDIRECT_URI=http://localhost:5000/api/ebay/callback

# Encryption key for storing eBay tokens (32+ chars recommended)
ENCRYPTION_KEY=your-32-char-encryption-key-here

# TCGPlayer Integration
# Get credentials from: https://developer.tcgplayer.com/
TCGPLAYER_API_KEY=your-tcgplayer-api-key
TCGPLAYER_ENABLED=true

# Manabox Integration (future)
MANABOX_API_KEY=your-manabox-api-key
MANABOX_ENABLED=false

# Card Kingdom Integration (future)
CARDKINGDOM_ENABLED=false
